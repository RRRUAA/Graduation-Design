
page {
  padding-bottom: calc(constant(safe-area-inset-bottom)+170rpx);
  padding-bottom: calc(env(safe-area-inset-bottom)+170rpx);
  background-color: rgba(57, 179, 74, .3);
}

.page {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.member-area {
  z-index: 2;
  margin-top: -20rpx;
  width: 688rpx;
  height: 174rpx;
  border-radius: 16rpx;
  background-color: #ebf8ec;
  overflow: hidden;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-bottom: 50rpx;
}

.vip-box {
  display: flex;
}

.vip-box image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden;
  margin-right: 26rpx;
  flex-shrink: 0;
}

.coin-box image {
  width: 90rpx;
  height: 80rpx;
  margin-right: 26rpx;
  margin-bottom: 8rpx;
}

.meta .title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 18rpx;
}

.tips {
  margin-top: 14rpx;
  color: #777777;
  font-size: 24rpx;
}

.coin-box {
  display: flex;
  flex-direction: column;
}

.currency {
  font-size: 25rpx;
  margin-left: 30rpx;
  margin-top: 0rpx;
  color: green;
}

.login-btn {
  width: 150rpx;
  height: 65rpx;
  border-radius: 50rpx;
  background-color: #026a8f;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
  text-align: center;
  z-index: 99;
  font-weight: bold;
  margin-top: 10rpx;
}

.login-btn:active {
  opacity: 0.6;
}

.menu-banner {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-bottom: 36rpx;
}

.menu-banner .location {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.menu-banner image {
  width: 30rpx;
  height: 30rpx;
}

.menu-banner .name {
  font-size: 25 rpx;
  margin-left: 8rpx;
  margin-bottom: 8rpx;
}

.menu-banner .menu-card {
  width: 688rpx;
  height: 340rpx;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.2);
  border-radius: 16rpx;
}

.banner-list {
  display: flex;
  box-sizing: border-box;
  padding: 0 30rpx;
  width: 100%;
  justify-content: space-between;
}

.banner-list .banner {
  width: 216rpx;
  height: 160rpx;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.2);
  border-radius: 16rpx;
}

.track{
  background-color: #ebebeb;
  height: 7rpx;
  border-radius: 6rpx;
  width: 100%;
  overflow: hidden;
}

.bar{
  background-color: green;
  height: 100%;
  width: 0%;
}