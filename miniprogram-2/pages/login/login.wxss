.header-nav {
  width: 100%;
  text-align: center;
  position: absolute;
  color: #fff;
  left: 0;
  top: 0;
  z-index: 99;
}
.header-left {
  position: absolute;
  cursor: pointer;
  left: 10px;
  bottom: 10px;
  font-size: 25px;
  font-weight: bold;
}
.header-middle {
  width: 80px;
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  bottom: 15px;
}

.footer {
  height: 75rpx;
  line-height: 40rpx;
  border-radius: 50rpx;
  background-color: #026a8f;
  color: #fff;
  font-size: 16px;
  font-weight: bold;
  text-align: center;
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  bottom: calc(80px + env(safe-area-inset-bottom));
  z-index: 99;
} 

 .container {
  position: relative;
  width: 100%;
  height: 100vh;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1; /* 将图片置于底层 */
}