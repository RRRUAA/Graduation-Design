.container {
  width: 100%;
 
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  /* 将图片置于底层 */
}

.header-nav {
  width: 100%;
  text-align: center;
  position: absolute;
  font-weight: bold;
  left: 0;
  top: 0;
  z-index: 99;
}

.header-left {
  position: absolute;
  cursor: pointer;
  left: 10px;
  bottom: 10px;
  font-size: 25px;
}

.header-middle {
  width: 80px;
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  bottom: 15px;
}


.list-items {
  margin-top: 26rpx;
  width: 98%;
  flex-direction: column;
  background-color: #fff;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
}

.list-items .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 30rpx;
  box-shadow: 0px 1px 0px 0px rgba(161, 158, 158, 0.1);
  height: 55rpx;
}

.list-items .item .content {
  display: flex;
  align-items: center;
}

.list-items .label {
  font-size: 30rpx;
  width: 160rpx;
  margin-right: 40rpx;
}

.tips {
  margin-right: 10rpx;
  font-size: 24rpx;
  color: gray;
}

.btn-wrap {
  width: 90%;
  display: flex;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 50rpx;
}

.address-btn {
  flex-grow: 1;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #1b7695;
  border-radius: 44rpx;
  color: #fff;
}