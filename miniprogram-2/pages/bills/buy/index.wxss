.block {
  position: relative;
  width: 730rpx;
  height: 150rpx;
  background-color: #f8f8f8;
  margin-bottom: 20rpx;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
}

.black {
  font-weight: bold;
  margin-bottom: 15rpx;
  margin-left: 25rpx;
  padding-top: 25rpx;
}

.gray {
  color: gray;
  font-size: 28rpx;
  margin-left: 25rpx;
}

.image {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 30rpx;
  top: 50rpx;
}

.no-address {
  width: 750rpx;
  padding-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.text {
  width: 750rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #8e8c8a;
  font-size: 28rpx;
}