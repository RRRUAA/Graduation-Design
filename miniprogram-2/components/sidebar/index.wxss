/* components/sidebar/index.wxss */
.sidebar {
  width: 100%;
  height: 1200rpx;
  background-color: #e4d0b8;
}

.sidebar-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 138rpx;
  position: relative;
}

.left-line {
  width: 6rpx;
  height: 48rpx;
  position: absolute;
  background-color:#8f5050;
  left: 0;
}

.sidebar-item.active {
  background-color: #d4bea2;
}

.item-icon {
  width: 58rpx;
  height: 58rpx;
  margin-bottom: 16rpx;
}

.item-label {
  font-size: 22rpx;
  font-weight: 400;
}